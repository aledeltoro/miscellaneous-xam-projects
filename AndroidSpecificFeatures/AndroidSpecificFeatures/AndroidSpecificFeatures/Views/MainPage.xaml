<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidSpecificFeatures.Views.MainPage">

    <Grid
        RowDefinitions="Auto, Auto">
        <Frame 
            Grid.Row="0"
            BackgroundColor="#2196F3" 
            Padding="24" 
            CornerRadius="0">
                <Label 
                    Text="Welcome to Xamarin.Forms!" 
                    HorizontalTextAlignment="Center" 
                    TextColor="White" 
                    FontSize="36"/>
        </Frame>
        
        <Label
            Grid.Row="1"
            Text="This container implements a tabbed page using Android specific toolbar placement" 
            FontSize="Title" 
            Padding="30,10,30,10"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"/>
    </Grid>

</ContentPage>
