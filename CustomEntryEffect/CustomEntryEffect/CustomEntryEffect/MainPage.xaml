<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomEntryEffect.MainPage"
             xmlns:effects="clr-namespace:CustomEntryEffect.Effects">
    <Grid
        RowDefinitions="Auto, Auto"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Label
            Grid.Row="0"
            Text="Custom entry effect"
            FontSize="Large"/>

        <Entry
            Grid.Row="1"
            Text="Tap the entry for a surprise!">

            <Entry.Effects>
                <effects:FocusEffect/>
            </Entry.Effects>
        </Entry>
        
    </Grid>

</ContentPage>
